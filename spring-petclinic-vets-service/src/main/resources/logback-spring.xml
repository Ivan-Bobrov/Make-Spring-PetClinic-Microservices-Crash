<configuration debug="true">
    <!-- Add a status listener to help debug configuration issues -->
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>

    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- Define a file appender for Hibernate logs -->
    <appender name="HIBERNATE_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Rotate log files daily and when they exceed 5MB -->
            <fileNamePattern>logs/hibernate-%d{yyyy-MM-dd}_%i.log</fileNamePattern>
            <!-- Specify the maximum file size -->
            <maxFileSize>5MB</maxFileSize>
            <!-- Specify the maximum number of days to keep the log files -->
            <maxHistory>20</maxHistory>
            <!-- Specify the total size of all archived log files -->
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Redirect Hibernate logs to the file appender -->
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="HIBERNATE_LOG"/>
    </logger>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
        <appender-ref ref="HIBERNATE_LOG"/>
    </logger>

    <!-- Configure the root logger to use console appender -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
